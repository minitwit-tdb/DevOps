{
  "compileOnSave": false,
  "compilerOptions": {
    "incremental": true,
    "outDir": "lib/",
    "lib": [
      "dom",
      "esnext"
    ],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["src/**/*"]
}